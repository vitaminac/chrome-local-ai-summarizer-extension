{
  "manifest_version": 3,
  "name": "AI Summarizer",
  "version": "1.1",
  "description": "Summarize the visible text of the current page using Chrome built-in Summarizer API.",
  "minimum_chrome_version": "138",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Summarize page",
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon.svg",
      "128": "icons/icon.svg"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}
